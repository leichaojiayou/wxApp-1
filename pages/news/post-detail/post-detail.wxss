.post-detail-container{
    display: flex;
    flex-direction: column;
}
.topImg{
    width:750rpx;
    height: 460rpx;

}
.music-start-img{
    width:51rpx;
    height:55rpx;
    position: absolute;
    left:20px;
    top:20px;
    opacity: 0.6;
}
.author-date{
    flex-direction: row;
    margin:20rpx 0 0 30rpx;
}
.author-img{
    height: 64rpx;
    width:64rpx;
    vertical-align: middle;
}
.author-name{
    font-size:30rpx;
    font-weight: 300;
    margin-left:20rpx;
    vertical-align: middle;
    color:#666;
}

.const-text{
  font-size:24rpx;
  color:#999;
  margin-left:30rpx;
}
.post-date{
    margin-left:30rpx;
    vertical-align: middle;
    color:#999;
}

.post-title{
    margin:30rpx 0 0 40rpx;
    letter-spacing: 2px;
    font-size:36rpx;
    font-weight: bold;
    color:#4b556c;

}

.tool{
    margin-top:20rpx;
}

.circle-img{
    float:right;
    margin-right:40rpx;
    vertical-align: middle;
}
.circle-img image{
    width:90rpx;
    height: 90rpx;
}
.share-img{
    margin-left:30rpx;
}

.line{
    width:660rpx;
    height: 1px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top:46rpx;
    margin: 0 auto;
    z-index:-99;
}

.post-content{
    margin:20rpx 30rpx 0 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
    color:#666;
}

