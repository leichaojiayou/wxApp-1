/*文章组件*/
.post-container{
    display: flex;
    flex-direction:column;
    margin: 20rpx 0 40rpx;
    background: #fff;
    border-top:1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom: 5px;
}

.post-top{
    margin:10rpx 0 20rpx 10rpx;
}

.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
}
.post-date{
  margin:0 0 5px 20rpx;
  vertical-align: middle;
  font-size:26rpx;
}

.post-title{
  font-size:34rpx;
  font-weight:bold;
  color:#333;
  margin:0 0 10px 10px;
 }

.post-Bigimg{
   margin:0 0 10px;
   width:100%;
   height: 340rpx;
}
.post-content{
    color:#666;
    font-size: 28rpx;
    margin:0 0 20rpx 10rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
.post-bottom{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left:10px;
}
.post-icon-imgs{
    height: 16px;
    width:16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-icon-text{
    vertical-align: middle;
    margin-right: 20px;
}