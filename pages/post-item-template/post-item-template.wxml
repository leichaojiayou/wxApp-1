<template name="postItem">
    <view class="post-container">
      <view class="post-top">
	  	<image class="post-author" src="{{item.imgSrc}}"></image>
		<text class="post-date">{{item.date}}</text>
	  </view>
	  <text class="post-title">{{item.title}}</text>
	  <image class="post-Bigimg" src="{{item.headImgSrc}}"></image>
	  <text class="post-content">
		  {{item.content}}
	  </text>
	  <view class="post-bottom">
	  	<image class="post-icon-imgs" src="/images/icon/chat.png"></image>
		<text class="post-icon-text">{{item.collection}}</text>
		<image class="post-icon-imgs"  src="/images/icon/view.png"></image>
		<text class="post-icon-text">{{item.reading}}</text>
	  </view>
   	</view>
</template>